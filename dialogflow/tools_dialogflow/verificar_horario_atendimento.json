  "info": {
    "title": "Verificar Horário de Atendimento",
    "version": "1.0.3",
    "description": "Verifica se o atendimento humano está disponível no momento"
  },
  "servers": [
    {
      "url": "https://dialogflow-whatsapp-bot-940683850801.southamerica-east1.run.app"
    }
  ],
  "paths": {
    "/dialogflow": {
      "post": {
        "summary": "Verifica se está dentro do horário de atendimento",
        "operationId": "verificarHorarioAtendimento",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "verificarHorario": {
                    "type": "boolean",
                    "description": "Flag obrigatória para acionar verificação",
                    "example": true
                  }
