              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sessionInfo": {
                      "type": "object",
                      "properties": {
                        "parameters": {
                          "type": "object",
                          "properties": {
                            "isBusinessHours": {
                              "type": "boolean"
                            }
                          },
                          "required": [
                            "isBusinessHours"
                          ]
                        }
                      }
                    }
                  },
                  "required": [
                    "sessionInfo"
                  ]
                }
              }
            }
          }
        }
      }
